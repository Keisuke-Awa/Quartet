<h2>プロフィール登録</h2>

<%= form_with(model: current_user.user_profile, url: user_user_profile_path(current_user.id), local: true, class: 'form-horizontal') do |f| %>
  <div class="form-group">
    <%= f.label :height, "身長：", class: "control-label col-xs-2" %>
    <div class="col-xs-5">
      <%= f.number_field :height, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :weight, "体重：", class: "mt-4" %>
    <%= f.number_field :weight, class: "form-control mb-4" %>
  </div>
  <div class="form-group">
    <%= f.label :blood_type, "血液型：", class: "control-label col-xs-2" %>
    <div class="col-xs-5">
      <%= f.select :blood_type, {'A型': 'A', 'B型': 'B', 'AB型': 'AB', 'O型': 'O'}, include_blank: '---', class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :birthplace_id, "出身地：", class: "mt-4"%>
    <%= f.collection_select	:birthplace_id, @form_option[:birthplaces], :id, :prefecture_name, include_blank: '---', class: "form-control mb-4" %>
  </div>
  <div class="form-group">
    <%= f.label :occupation_id, "職種：", class: "mt-4"%>
    <%= f.collection_select	:occupation_id, @form_option[:occupations], :id, :occupation_name, include_blank: '---', class: "form-control mb-4" %>
  </div>
  <div class="form-group">
    <%= f.label :educational_bg_id, "学歴：", class: "mt-4"%>
    <%= f.collection_select	:educational_bg_id, @form_option[:educational_bgs], :id, :ebg_name, include_blank: '---', class: "form-control mb-4" %>
  </div>
  <div class="form-group">
    <%= f.label :annual_income_id, "年収：", class: "mt-4"%>
    <%= f.collection_select	:annual_income_id, @form_option[:annual_incomes], :id, :income_range, include_blank: '---', class: "form-control mb-4" %>
  </div>
  <div class="form-group">
    <%= f.label :smoking_status_id, "喫煙有無：", class: "mt-4"%>
    <%= f.collection_select	:smoking_status_id, @form_option[:smoking_statuses], :id, :smoking_status, include_blank: '---', class: "form-control mb-4" %>
  </div>
  <div class="form-group">
    <%= f.submit "保存", class: "btn btn-success" %>
    <%= link_to("スキップ", home_user_path(current_user.id), class: "btn btn-success") %>
  </div>
<% end %>