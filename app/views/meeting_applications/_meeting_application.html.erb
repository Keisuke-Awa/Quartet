<div class="card" style="height:15vh;">
  <div class="row no-gutters my-auto">  
    <div class="col-md-2 m-auto text-center">
      <div class="profile-avatar">
        <%=link_to image_tag(ma.applicant.avatar,
            alt: "avatar", width: "70vw", class: "rounded-circle bd-placeholder-img img-fluid"), 
            url_for(ma.applicant.avatar), data: {lightbox: "avatar", title: ma.applicant.name} %>
      </div>
    </div>  
    <div class="col-md-8">
      <div class="card-body">
        <div>
          <%=truncate(ma.detail, length: 150)%>
        </div>
      </div>
    </div>
    <div class="col-md-2 my-auto">
      <%= link_to('詳細', meeting_meeting_application_path(ma.meeting, ma), class: "btn btn-yellow loading-link", remote: true ) %>
    </div>
  </div>
</div>