<% if @message_room.nil? %>
  <%= form_with(model: MessageRoom.new, local: true) do |f| %>
    <%= hidden_field_tag :user_id, @partner.id %>
    <%= f.submit "メッセージを始める", class: "btn btn-yellow" %>
  <% end %>
<% else %>
  <%= link_to('メッセージへ', message_room_path(@message_room), class: "btn btn-yellow") %>
<% end %>
