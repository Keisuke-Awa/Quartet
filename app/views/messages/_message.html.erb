<div class="message">
  <div class="message-header">
    <p class="message-user">
      <%= message.user.name %>
    </p>
    <p class="message-datetime">
      <%= message.created_at.strftime("%m/%d %H:%M") %>
    </p>
  </div>
  <div class="message-body">
    <p class="message-content">
      <%= message.content if message.content.present? %>
    </p>
  </div>
</div>
