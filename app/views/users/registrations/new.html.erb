<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: 'emailField' %>
  </div>

  <div class="field">
    <%= f.label :birth_date %><br />
    <%= f.date_select :birth_date, autofocus: true, autocomplete: "birth_date" %>
  </div>

  <div class="field">
    <%= f.label :sex %><br />
    <%= f.label :gender, "男性", {value: "1", style: "display: inline-block;"} %>
    <%= f.radio_button :sex, "1" %>
    <%= f.label :gender, "女性", {value: "2", style: "display: inline-block;"} %>
    <%= f.radio_button :sex, "2" %>
  </div>

  <div class="field">
    <%= f.label :residence %><br />
    <%= f.collection_select(:residence_id, PrefectureMst.all, :id, :prefecture_name) %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

<script>
  window.onload = function() {
    const emailField = document.getElementById("emailField");
    console.log(emailField);
    if (emailField.value !== "") {
      emailField.readOnly = true;
    }
  }
</script>
