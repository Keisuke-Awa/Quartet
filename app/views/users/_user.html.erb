<% if user.avatar.attached? %>
  <%= image_tag user.avatar.variant(combine_options:{gravity: :center, resize:"40x40"}).processed, alt: "icon", class: "img-fluid" %>
<% else %>
  <%= image_tag '/assets/images/default-icon.jpeg', width: "50", alt: "icon", class: "img-fluid" %>
<% end %>
<%= link_to(user.name, user_path(user.id)) %>
