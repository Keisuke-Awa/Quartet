<div class="sidebar-content sidebar__inner">
  <ul class="nav flex-column side-bar">
    <li class="nav-item">
      <%= link_to(t('.search_meeting'), meetings_path, class: 'nav-link sidebar-color loading-link', remote: true) %>
    </li>
    <li class="nav-item">
      <%= link_to('企画する', new_meeting_path, class: 'nav-link sidebar-color loading-link', remote: true) %>
    </li>
    <li class="nav-item">
      <%= link_to('作成プラン', index_meeting_user_path(current_user), class: 'nav-link sidebar-color loading-link', remote: true) %>
    </li>
    <li class="nav-item">
      <%= link_to('申請先プラン', index_meeting_application_user_path(current_user), class: 'nav-link sidebar-color loading-link', remote: true) %>
    </li>
    <li class="nav-item">
      <%= link_to('マッチング', index_appointment_user_path(current_user), class: 'nav-link sidebar-color loading-link', remote: true) %>
    </li>
    <li class="nav-item">
      <%= link_to('メッセージ', index_message_room_user_path(current_user), class: 'nav-link sidebar-color loading-link', remote: true) %>
    </li>
  </ul>
</div>
<script>
const sidebar_link = document.getElementsByClassName('nav-link');

for (let i = 0; i < sidebar_link.length; i++) {
  clickSidebarLinkAction(sidebar_link[i], i);
}

function clickSidebarLinkAction(sidebar_link_element, num) {
  sidebar_link_element.addEventListener("click", function() {
    this.classList.add('click-sidebar-color');
    this.classList.remove('sidebar-color');

    for (let i = 0; i < sidebar_link.length; i++) {
      if(num !== i){
        if(sidebar_link[i].classList.contains('click-sidebar-color')){
          sidebar_link[i].classList.remove('click-sidebar-color');
          sidebar_link[i].classList.add('sidebar-color');
        }
      }
    }
  })
}
</script>