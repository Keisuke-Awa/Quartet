<div class="card m-3 d-inline-block" style="max-width: 300px;">
  <ul class="list-group list-group-flush">
    <li class="row no-gutters list-group-item">
      <div class="col-md-6 m-auto text-center">
        <div class="profile-avatar">
          <%=link_to image_tag(meeting.planning_user.avatar,
            alt: "avatar", width: "80vw", class: "rounded-circle bd-placeholder-img img-fluid"), 
            url_for(meeting.planning_user.avatar), data: {lightbox: "avatar", title: meeting.planning_user.name} %>
        </div>
        <div class="pt-2">
          <%=meeting.planning_user.name%>
        </div>
      </div>
      <div class="col-md-6">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%=meeting.meet_at.strftime("%-m月%-d日") + calculate_day_of_week(meeting.meet_at)%>
          </li>
          <li class="list-group-item">
            <%=meeting.meet_at.strftime("%-H時%-M分〜")%>
          </li>
          <li class="list-group-item">
            <span><%= meeting.place.name %></span>
            <span>/</span>
            <span><%= "#{meeting.people}on#{meeting.people}" %></span>
          </li>
        </ul>
      </div>
    </li>
    <li class="list-group-item m-auto">
      <%= link_to('詳細', meeting_path(meeting), class: "btn btn-red-pink loading-link", remote: true ) %>
    </li>
  </ul>
</div>
