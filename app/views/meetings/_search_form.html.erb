<div class="meeting-search-form">
<%= search_form_for @q, url: search_meetings_path, remote: true do |f| %>
  <div class="date-search-form" id="dateSearchFirst">
    <div class="date-search">
      <% @first_week.each do |date| %>
        <div>
          <%= f.radio_button :meet_at_equals_date, date %>
          <%= f.label :meet_at_equals_date, date.strftime("%m/%d") %>
        </div>
      <% end %>
    </div>
    <div id="nextWeekButton" class="week-button"></div>
  </div>

  <div class="date-search-form" id="dateSearchSecond">
    <div id="beforeWeekButton" class="week-button"></div>
    <div class="date-search">
      <% @second_week.each do |date| %>
        <div>
          <%= f.radio_button :meet_at_equals_date, date %>
          <%= f.label :meet_at_equals_date, date.strftime("%m/%d" ) %>
        </div>
      <% end %>
    </div>
  </div>

  <%= f.label :place_id_eq, "場所" %>
  <%= f.collection_select :place_id_eq, @places, :id, :name, include_blank: '全て' %> 

  <%= f.label :people_eq, "人数" %>
  <%= f.number_field :people_eq %>

  <%= f.submit "検索" %>
<% end %>

