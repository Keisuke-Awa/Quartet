<div class="card w-100" >
  <div class="row no-gutters">  
    <div class="col-md-2 m-auto text-center">
      <div class="profile-avatar">
        <%=link_to image_tag(m.planning_user.avatar,
            alt: "avatar", width: "60px", height: "60px", class: "rounded-circle bd-placeholder-img"), 
            url_for(m.planning_user.avatar), data: {lightbox: "avatar", title: m.planning_user.name} %>
      </div>
    </div>  
    <div class="col-md-8">
      <div class="card-body">
        <div><%=m.meet_at.strftime("%-m月%-d日") + calculate_day_of_week(m.meet_at)%>
          <%=m.meet_at.strftime("%-H時%-M分")%>〜</div>
        <div><%="#{m.place.name} / #{m.people}on#{m.people}"%></div>
      </div>
    </div>
    <div class="col-md-2 my-auto">
      <%= link_to('詳細', meeting_path(m), class: "btn btn-yellow loading-link", remote: true ) %>
    </div>
  </div>
</div>